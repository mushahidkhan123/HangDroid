<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mushahid.hangdroid.GameOverMultiplayer"
    android:background="#ffffffff"
     >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You Lose, Game Over"
        android:id="@+id/textView8"
        android:textColor="#FF4136"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#ffffffff" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:id="@+id/imageView3"
        android:background="#ffffffff"
        android:layout_marginTop="90dp"
        android:src="@drawable/game_over"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Play Again"
        android:id="@+id/button12"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="50dp"
        android:background="#fffff748"
        android:textColor="#ffff8642"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playAgain"
        android:paddingRight="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Main Menu"
        android:id="@+id/button13"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:background="#ffff07a9"
        android:textColor="#ffffffff"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:onClick="mainMenu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/wordToGuess"
        android:layout_above="@+id/button12"
        android:layout_centerHorizontal="true"
        android:text="aaaaaaa" />

</RelativeLayout>
