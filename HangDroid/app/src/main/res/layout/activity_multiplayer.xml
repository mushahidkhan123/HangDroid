<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mushahid.hangdroid.MultiplayerSetup"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Multiplayer Setup"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:textSize="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffff1da4"
        android:layout_marginLeft="35dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button11"
        android:background="#fffff93d"
        android:onClick="multiplayerGameStart"
        android:textColor="#fffb37ee"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/hint"
        android:layout_marginLeft="87.5dp" />


    <EditText

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/guessWord"
        android:hint="Enter Word"
        android:maxWidth="135dp"
        android:textColorHint="#ff000000"
        android:maxHeight="40dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0d0d0d"
        android:textAlignment="center" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:layout_below="@+id/guessWord"
        android:layout_alignLeft="@+id/guessWord"
        android:layout_alignStart="@+id/guessWord"
        android:hint="Enter a Hint"
        android:maxWidth="145dp"
        android:layout_marginTop="30dp"
        android:textColorHint="#ff070707"
        android:textColor="#ff060606"
        android:layout_marginLeft="2.5dp"
        android:maxHeight="40dp" />

</RelativeLayout>
