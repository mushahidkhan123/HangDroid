<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
    android:id="@+id/relativeLayoutours"
    android:background="#ffffffff">

    <TextView
        android:text="HangDroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2ECC40"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:fontFamily="comic-sans"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="150dp"
        android:paddingTop="0dp"
        android:weightSum="1">

        <Button
            android:onClick="StartGame"
             android:background="#ffff5b3a"
            android:textColor="#FFFFFF"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Single Player"
            android:id="@+id/button"
            android:layout_marginBottom="30dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Multi-Player"
            android:id="@+id/button2"
            android:background="#ff0078f7"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="30dp"
            android:layout_weight="0.17"
            android:onClick="multiplayerSetup" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:onClick="scorefcn"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Scores"
                android:id="@+id/button3"
                android:background="#ffe0227e"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView

        android:textSize="25dp"
        android:textColor="#ff0007ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don&apos;t Let the Android Hang"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
