<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mushahid.hangdroid.GameOver"
    android:id="@+id/a"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:weightSum="1"
            android:background="#0ffffff7"
            android:layout_marginRight="10dp"
            android:id="@+id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="-70dp">

            <EditText
                android:textColor="#ff030303"
                android:textColorHint="#ff000000"
                android:hint="Write Name"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/nameEditText"
                android:layout_marginLeft="0dp"
                android:paddingLeft="15dp"
                android:maxLength="40"
                android:maxWidth="175dp"
                android:minHeight="40dp"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="10dp" />


            <Button

                android:textSize="17dp"
                android:textColor="#ffffffff"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="Save Score"
                android:id="@+id/button7"
                android:background="#2ECC40"
                android:layout_marginRight="0dp"
                android:onClick="saveScorefcn"
                android:layout_marginLeft="0dp"
                android:textAlignment="center"
                android:paddingRight="10dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="0dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:id="@+id/imageView2"
        android:background="#ffffffff"
        android:layout_marginTop="90dp"
        android:src="@drawable/game_over"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You Lose, Game Over"
        android:id="@+id/textView9"
        android:textColor="#FF4136"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/wordToGuess"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Score: "
        android:id="@+id/totalScore"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:textColor="#ffff5ac4"
        android:textSize="25dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="MAIN menu"
        android:id="@+id/button10"
        android:layout_marginTop="390.25dp"
        android:background="#ff4ddeff"
        android:layout_toRightOf="@+id/totalScore"
        android:layout_toEndOf="@+id/totalScore"
        android:layout_marginLeft="-80dp"
        android:onClick="mainMenu"
        android:textColor="#ffffffff"
        android:layout_marginRight="20dp"
        android:textSize="17dp" />

</RelativeLayout>
