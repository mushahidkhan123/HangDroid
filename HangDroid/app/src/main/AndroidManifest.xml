<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mushahid.hangdroid" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreen"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".GameOver"
            android:label="@string/title_activity_game_over" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".MultiplayerSetup"
            android:label="@string/title_activity_multiplayer" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".GameMultiActivity"
            android:label="@string/title_activity_multiplayer" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ScoreActivity"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".GameOverMultiplayer"
            android:label="@string/title_activity_game_over_multiplayer" >
        </activity>
    </application>

</manifest>
